    "@material-ui/icons": "^3.0.2",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "cryptiles": "^4.1.3",
    "css-loader": "^0.28.11",
    "docuri": "^4.2.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "grunt": "^1.0.3",
    "grunt-cli": "^1.3.2",
    "html-webpack-plugin": "^3.2.0",
